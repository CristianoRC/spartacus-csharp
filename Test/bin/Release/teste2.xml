<?xml version="1.0" encoding="UTF-8" ?>
<report>

    <connection>
        <type>odbc</type>
        <provider></provider>
        <host></host>
        <port></port>
        <service>TPMP563</service>
        <user>planning</user>
        <password>plaserv</password>
    </connection>

    <settings>
        <layout>PORTRAIT</layout>
    
        <dataheaderborder>TOP,BOTTOM</dataheaderborder>
        <datafieldborder>NONE</datafieldborder>
        <groupheaderborder>NONE</groupheaderborder>
        <groupfooterborder>NONE</groupfooterborder>
        
        <dataheadercolor>WHITE</dataheadercolor>
        <datafieldevencolor>WHITE</datafieldevencolor>
        <datafieldoddcolor>WHITE</datafieldoddcolor>
        <groupheadercolor>SILVER</groupheadercolor>
        <groupfootercolor>SILVER</groupfootercolor>
        
        <dataheaderfont>
            <family>HELVETICA</family>
            <bold>TRUE</bold>
            <italic>FALSE</italic>
            <size>9,0</size>
        </dataheaderfont>
        
        <datafieldfont>
            <family>HELVETICA</family>
            <bold>FALSE</bold>
            <italic>FALSE</italic>
            <size>7,0</size>
        </datafieldfont>
        
        <groupheaderfont>
            <family>HELVETICA</family>
            <bold>TRUE</bold>
            <italic>TRUE</italic>
            <size>8,0</size>
        </groupheaderfont>
        
        <groupfooterfont>
            <family>HELVETICA</family>
            <bold>TRUE</bold>
            <italic>TRUE</italic>
            <size>8,0</size>
        </groupfooterfont>
    </settings>

    <command>
        <sql>
            select prid,
                   prdescricao,
                   prncm,
                   'Cabecalho ' || prncm as ncmheader,
                   'Rodape ' || prncm as ncmfooter
            from planning.produtos
            where emidpr = #EMID#
              and prano = #ANO#
        </sql>
        <parameters>
            <parameter>
                <name>EMID</name>
                <type>INTEGER</type>
            </parameter>
            <parameter>
                <name>ANO</name>
                <type>INTEGER</type>
            </parameter>
        </parameters>
    </command>

    <fields>
        <field>
            <title>Código</title>
            <column>prid</column>
            <align>LEFT</align>
            <fill>20</fill>
        </field>
        <field>
            <title>Descrição</title>
            <column>prdescricao</column>
            <align>LEFT</align>
            <fill>70</fill>
        </field>
        <field>
            <title>NCM</title>
            <column>prncm</column>
            <align>RIGHT</align>
            <fill>10</fill>
        </field>
    </fields>

    <groups>
        <group>
            <level>1</level>
            <column>prncm</column>
            <sort>prid asc</sort>
            
            <showheader>TRUE</showheader>
            <headerfields>
                <headerfield>
                    <title></title>
                    <column>ncmheader</column>
                    <align>LEFT</align>
                    <fill>100</fill>
                </headerfield>
            </headerfields>
            
            <showfooter>FALSE</showfooter>
            <footerfields>
                <footerfield>
                    <title></title>
                    <column>ncmfooter</column>
                    <align>RIGHT</align>
                    <fill>100</fill>
                </footerfield>
            </footerfields>
        </group>
    </groups>

</report>
